<%- include('./encabezadoTabla') -%>
<% if(productos.length > 0) {%>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow">
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            <% productos.forEach(function(producto) {%>
            <tr>
                <td style="vertical-align:middle"><%=producto.nombre%></td>
                <td style="vertical-align:middle"><%=producto.precio%></td>
                <td>
                    <img src="<%=producto.url%>" height="40px" width="40px"></img>
                </td>
            </tr>
            <% }); %>
        </table>
    </div>
<% } else { %>
    <h3 class="alert alert-danger"> No se encontraron datos </h3>
<% } %>
<a class="btn btn-back btn-success mt-3 mb-5" style="margin: 10px;" href="/">Volver al formulario</a>